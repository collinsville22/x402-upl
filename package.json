{
  "name": "x402-upl",
  "version": "1.0.0",
  "private": true,
  "packageManager": "npm@10.0.0",
  "workspaces": [
    "packages/*",
    "packages/registry/*",
    "packages/sdk/*",
    "packages/plugins/*",
    "packages/integrations/*",
    "packages/dashboard/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "deploy": "turbo run deploy",
    "setup": "bash scripts/setup.sh",
    "start:api": "cd packages/registry/api && npm start",
    "start:indexer": "cd packages/registry/indexer && npm start",
    "start:mcp": "cd packages/mcp-bridge && npm start",
    "start:dashboard": "cd packages/dashboard/frontend && npm start",
    "db:generate": "cd packages/registry/api && npx prisma generate",
    "db:push": "cd packages/registry/api && npx prisma db push",
    "db:migrate": "cd packages/registry/api && npx prisma migrate deploy",
    "db:studio": "cd packages/registry/api && npx prisma studio",
    "contracts:build": "cd packages/contracts && anchor build",
    "contracts:deploy": "cd packages/contracts && anchor deploy",
    "contracts:test": "cd packages/contracts && anchor test"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "typescript": "^5.6.3",
    "@types/node": "^22.10.2",
    "prettier": "^3.4.2",
    "eslint": "^9.17.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
